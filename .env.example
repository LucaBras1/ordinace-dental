# Database Configuration
# PostgreSQL connection string for Prisma 7 with pg adapter
DATABASE_URL="postgresql://user:password@localhost:5432/ordinace_dental?schema=public"

# Comgate Payment Gateway
COMGATE_MERCHANT_ID="your_merchant_id"
COMGATE_SECRET="your_secret_key"
COMGATE_TEST_MODE="true"

# Resend Email Service
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="Dentální ordinace <rezervace@ordinace.cz>"

# Google Calendar API Integration
# OAuth2 credentials for syncing bookings with Google Calendar
# Setup guide: https://developers.google.com/calendar/api/quickstart/nodejs
GOOGLE_CLIENT_ID="your_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your_client_secret"
GOOGLE_REFRESH_TOKEN="your_refresh_token"
GOOGLE_CALENDAR_ID="your_calendar_id@group.calendar.google.com"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/google/callback"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
